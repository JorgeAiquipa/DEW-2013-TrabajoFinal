<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th> 
    <th>Email</th>
    <th>Crypted password</th>
    <th>Salt</th>
    <th>Name</th>
    <th>Father last name</th>
    <th>Mother last name</th>
    <th>Gender</th>
    <th>Document type</th>
    <th>Document number</th>
    <th>Address</th>
    <th>District</th>
    <th>Birth date</th>
    <th>Mobile phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.crypted_password %></td>
    <td><%= user.salt %></td>
    <td><%= user.name %></td>
    <td><%= user.father_last_name %></td>
    <td><%= user.mother_last_name %></td>
    <td><%= user.gender %></td>
    <td><%= user.document_type.name %></td>
    <td><%= user.document_number %></td>
    <td><%= user.address %></td>
    <td><%= user.district.name %></td>
    <td><%= user.birth_date %></td>
    <td><%= user.mobile_phone %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

