<h1>Listing districts</h1>

<table border="1">
  <tr>
    <th >Name</th>
    <th>'What do you do?'</th>
  </tr>

  <br />

<% @districts.each do |district| %>
  <tr>
    <td><%= district.name %></td>
    <td>
      <%= link_to 'Show', district %> - 
      <%= link_to 'Edit', edit_district_path(district) %> - 
    <%= link_to 'Destroy', district, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New District', new_district_path %>
<%= link_to 'Go to Locals', locals_path %>

