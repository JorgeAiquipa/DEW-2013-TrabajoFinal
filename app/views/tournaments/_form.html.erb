<%= simple_form_for(@tournament) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <%= f.input :name %>
  </div>
  <div class="field">
  <%= f.label :group %>
   <%= f.select :group, options_for_select([["4", 4], ["8", 8]]) %>
    
  </div>
  <div class="field">
    <%= f.input :date %>
  </div>
  <div class="field">
    <%= f.input :time %>
  </div>
  <div class="field">
    <%= f.association :local %>
  </div>
  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
